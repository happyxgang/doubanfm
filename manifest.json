{
    "name": "豆瓣FM 精美版",
    "version": "6.1",
    "manifest_version": 2,
    "description": "改变的不单单是外表, 完全的播放控制, 歌词同步, 去插播广告",

    "icons": {
        "16": "assets/icon_small.png",
        "48": "assets/icon_medium.png",
        "128": "assets/icon_big.png"
    },

    "browser_action": {
        "default_title": "豆瓣FM 精美版",
        "default_icon": "assets/icon_small.png"
    },

    "background": {
        "scripts": ["src/zepto.min.js", "src/underscore-min.js", "src/backbone-min.js", "src/background.js"]
    },

    "options_page": "pages/options.html",

    "permissions": [
        "background",
        "tabs",
        "notifications",
        "cookies",
        "http://douban.fm/*",
        "http://douban.com/",
        "http://ting.baidu.com/*",
        "http://openapi.baidu.com/*"
    ]
}

